---
import { Code2, Star, GitFork, Activity } from "lucide-react";

interface Props {
    totalRepos: number;
    totalStars: number;
    totalForks: number;
    activeRepos: number;
}

const { totalRepos, totalStars, totalForks, activeRepos } = Astro.props;
---

<div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-primary/5 blur-3xl opacity-50"></div>
    <div
        class="relative flex flex-wrap items-center justify-center gap-8 md:gap-16 py-8 px-6 bg-surface/20 border-y border-white/5 backdrop-blur-md"
    >
        <div class="flex flex-col items-center gap-1 group">
            <div class="flex items-center gap-3">
                <Code2
                    size={20}
                    className="text-primary group-hover:scale-125 transition-transform"
                />
                <span
                    class="text-2xl md:text-4xl font-black text-white leading-none font-display italic tracking-tighter"
                    >{totalRepos}</span
                >
            </div>
            <span
                class="text-[10px] font-bold text-textMuted uppercase tracking-[0.2em] ml-1"
                >Repositories</span
            >
        </div>

        <div
            class="hidden md:block w-px h-12 bg-gradient-to-b from-transparent via-white/10 to-transparent"
        >
        </div>

        <div class="flex flex-col items-center gap-1 group">
            <div class="flex items-center gap-3">
                <Star
                    size={20}
                    className="text-yellow-500 fill-yellow-500 group-hover:scale-125 transition-transform"
                />
                <span
                    class="text-2xl md:text-4xl font-black text-white leading-none font-display italic tracking-tighter"
                    >{totalStars.toLocaleString()}</span
                >
            </div>
            <span
                class="text-[10px] font-bold text-textMuted uppercase tracking-[0.2em] ml-1"
                >Total Stars</span
            >
        </div>

        <div
            class="hidden md:block w-px h-12 bg-gradient-to-b from-transparent via-white/10 to-transparent"
        >
        </div>

        <div class="flex flex-col items-center gap-1 group">
            <div class="flex items-center gap-3">
                <GitFork
                    size={20}
                    className="text-secondary group-hover:scale-125 transition-transform"
                />
                <span
                    class="text-2xl md:text-4xl font-black text-white leading-none font-display italic tracking-tighter"
                    >{totalForks.toLocaleString()}</span
                >
            </div>
            <span
                class="text-[10px] font-bold text-textMuted uppercase tracking-[0.2em] ml-1"
                >Total Forks</span
            >
        </div>

        <div
            class="hidden md:block w-px h-12 bg-gradient-to-b from-transparent via-white/10 to-transparent"
        >
        </div>

        <div class="flex flex-col items-center gap-1 group">
            <div class="flex items-center gap-3">
                <Activity
                    size={20}
                    className="text-accent group-hover:scale-125 transition-transform"
                />
                <span
                    class="text-2xl md:text-4xl font-black text-white leading-none font-display italic tracking-tighter"
                    >{activeRepos}</span
                >
            </div>
            <span
                class="text-[10px] font-bold text-textMuted uppercase tracking-[0.2em] ml-1"
                >Active Projects</span
            >
        </div>
    </div>
</div>
